@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pizzas</title>

    <style>

        .heading{
            background-color : darkgray;
            color : white;
            border : 7px white;
            padding : 10px;
        }
    </style>
</head>
<body>
    <div class="text-center">

        <h1 class="heading">Pizza Store</h1>
    </div>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@
                            <img src="@item.Image" width="100%" height="225" />
                            <div class="card-body">
                                <p class="card-text">@item.Name</p>
                                <p>Category : @item.CategoryName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a id="view-btn" class="btn btn-sm btn-outline-secondary" asp-controller="Pizza" asp-action="ViewDetails" asp-route-id="@item.Id">Know More</a>
                                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Add to Cart</a>
                                    </div>
                                    <small class="text-body-secondary">Quantity : @item.Quantity </small>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
